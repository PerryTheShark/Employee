<odoo>
    <data noupdate="0">
        <record id="group_category_Employee" model="ir.module.category">
            <field name="name">Employee</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_employee_experience_manager" model="res.groups">
            <field name="name">Employee Experience Manager</field>
            <field name="category_id" ref="group_category_Employee"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <!-- New Group inheriting Employee Experience Manager -->
        <record id="group_extended_experience_manager" model="res.groups">
            <field name="name">Extended Experience Manager and manage path company field</field>
            <field name="category_id" ref="group_category_Employee"/>
            <field name="implied_ids"
                   eval="[(4, ref('Employee.group_employee_experience_manager'))]"/> <!-- Inherits Employee Experience Manager -->
        </record>

        <!--new group for certifications-->
        <record id="group_certification_manager" model="res.groups">
            <field name="name">Certification Manager</field>
            <field name="category_id" ref="group_category_Employee"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <!--new group for skill manager-->
        <record id="group_skill_manager" model="res.groups">
            <field name="name">Skill Manager</field>
            <field name="category_id" ref="group_category_Employee"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <!--new group for head manager-->
        <record id="group_hr_employee_experience_manager_extend" model="res.groups">
            <field name="name">Employee skill &amp; certification manager</field>
            <field name="category_id" ref="group_category_Employee"/>
            <field name="implied_ids"
                   eval="[(6, 0, [ref('Employee.group_skill_manager'), ref('Employee.group_certification_manager')])]"/>
        </record>

        <record id="group_employee_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="group_category_Employee"/>
            <field name="implied_ids" eval="[(6, 0, [ref('Employee.group_skill_manager'),ref('Employee.group_extended_experience_manager'), ref('Employee.group_certification_manager')])]"/>
        </record>

        <!--        admin-->
        <record id="hr.group_hr_manager" model="res.groups">
            <field name="category_id" ref="base.module_category_human_resources_employees"/>
            <field name="implied_ids" eval="[(4, ref('Employee.group_hr_employee_experience_manager_extend'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!--        default rule for skill -->
        <record id="hr_skill_rule_strict" model="ir.rule">
            <field name="name">Skill Deletion Rule</field>
            <field name="model_id" ref="model_employee_skill_score"/>
            <field name="domain_force">[('employee_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('Employee.group_hr_employee_experience_manager_extend'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="hr_skill_rule_admin" model="ir.rule">
            <field name="name">Skill Deletion Rule</field>
            <field name="model_id" ref="model_employee_skill_score"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
    </data>
</odoo>