<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_employee_skill_tree" model="ir.ui.view">
            <field name="name">employee.skill.view.tree</field>
            <field name="model">employee.skill</field>
            <field name="arch" type="xml">
                <tree string="Employee skill">
                    <field name="name"/>
                    <field name="description"/>

                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_employee_skill_form" model="ir.ui.view">
            <field name="name">employee.skill.view.form</field>
            <field name="model">employee.skill</field>
            <field name="arch" type="xml">
                <form string="Skill">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="score_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_employee_skill_kanban" model="ir.ui.view">
            <field name="name">employee.skill.view.kanban</field>
            <field name="model">employee.skill</field>
            <field name="arch" type="xml">
                <kanban default_group_by="name" records_draggable="0">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    Description: <field name="description"/>
                                </div>
                                <div>
                                    number of score ID: <field name="score_id"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_employee_skill" model="ir.actions.act_window">
            <field name="name">Employee skills</field>
            <field name="res_model">employee.skill</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

    </data>
</odoo>