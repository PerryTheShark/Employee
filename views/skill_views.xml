<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_employee_skill_tree" model="ir.ui.view">
            <field name="name">employee.skill.view.tree</field>
            <field name="model">employee.skill</field>
            <field name="arch" type="xml">
                <tree string="Employee skill">
                    <field name="name"/>
                    <field name="description"/>

                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_employee_skill_form" model="ir.ui.view">
            <field name="name">employee.skill.view.form</field>
            <field name="model">employee.skill</field>
            <field name="arch" type="xml">
                <form string="Library Book">
                    <sheet>
                        <group>
                            <field name="skill_type_id"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="score_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_employee_skill_kanban" model="ir.ui.view">
            <field name="name">employee.skill.view.kanban</field>
            <field name="model">employee.skill</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="description"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_employee_skill" model="ir.actions.act_window">
            <field name="name">Employee skills</field>
            <field name="res_model">employee.skill</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <!-- Skill -->
        <record id="hr_skill_type_action" model="ir.actions.act_window">
            <field name="name">Skill Types</field>
            <field name="res_model">skill.type</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="hr_skill_type_view_tree" model="ir.ui.view">
            <field name="name">skill.type.tree</field>
            <field name="model">skill.type</field>
            <field name="arch" type="xml">
                <tree string="Skill Types">
                    <field name="name"/>
                    <field name="skill_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_skill_type_view_form" model="ir.ui.view">
            <field name="name">skill.type.form</field>
            <field name="model">skill.type</field>
            <field name="arch" type="xml">
                <form string="Skill Type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Skill Type"/>
                            <h1>
                                <field name="name" placeholder="e.g. Languages" required="True"/>
                            </h1>
                        </div>
                        <!--                    <group string="Skills">-->
                        <!--                    </group>-->
                        <!--                    <field name="skill_ids" nolabel="1" context="{'default_skill_type_id': id}">-->
                        <!--                        <tree editable="bottom">-->
                        <!--                            <field name="sequence" widget="handle" />-->
                        <!--                            <field name="name"/>-->
                        <!--                        </tree>-->
                        <!--                    </field>-->
                        <!--                    <group string="Levels">-->
                        <!--                    </group>-->
                        <!--                    <field name="skill_level_ids" nolabel="1" context="{'default_skill_type_id': id}"/>-->
                    </sheet>
                </form>
            </field>
        </record>

    <record id="estate_property_tag_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tag.tree</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Property Tags" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree</field>
    </record>
    </data>
</odoo>