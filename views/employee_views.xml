<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="id_employees_view_tree" model="ir.ui.view">
            <field name="model">hr.employee</field>
            <field name="inherit_id"
                   ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <field name="work_email" position="after">
                    <field name="years_of_experience"/>
                </field>
            </field>

        </record>

        <record id="employee_view_form" model="ir.ui.view">
            <field name="name">employee.form.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id"
                   ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <div name="button_box" class="oe_button_box">
                    <button name="open_experience_wizard" class="oe_stat_button" icon="fa-briefcase"
                            type="object">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="years_of_experience" readonly="1"/>
                            </span>
                            <span class="o_stat_text">Edit years</span>
                        </div>
                    </button>
                </div>
                <div name="button_box" class="oe_button_box">
                    <button name="V2_open_experience_wizard" class="oe_stat_button" icon="fa-id-card-o"
                            type="object">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="certificate_number" readonly="1"/>
                            </span>
                            <span class="o_stat_text">certification</span>
                        </div>
                    </button>
                </div>
                <field name="coach_id" position="after">
                    <field name="years_of_experience"/>
                    <field name="the_past_company"/>
                    <field name="code" readonly="1"/>
                    <button name="open_experience_wizard" type="object" string="Edit years"
                            class="btn-secondary" icon="fa-pencil"/>
                </field>
                <xpath expr="//page[@name='public']" position="before">
                    <page name="cetificate">
                        <group>
                            <field name="certificate_ids"/>
                        </group>
                        <button name="update_year_of_experience" string="Update years of experience"
                                type="object" class="btn-primary"/>
                        <field name="skill_number" attrs="{'invisible': 1}"/>
                        <group attrs="{'invisible': [('skill_number', '=', 0)]}">
                            <!--                            <field mode="tree" name="show_skill_score_id">-->
                            <!--                                <tree>-->
                            <!--                                    <field name="level_progress" widget="progressbar" style="text-align: left;"/>-->
                            <!--                                    <field name="employee_id"/>-->
                            <!--                                    <field name="skill_id"/>-->
                            <!--                                </tree>-->
                            <!--                            </field>-->
                            <field mode="tree,form" name="skill_score_id">
                                <tree>
                                    <field name="level_progress" widget="progressbar" style="text-align: left;"/>
                                    <field name="employee_id">
                                    </field>
                                    <field name="skill_id"/>
                                </tree>
                                <form>
                                    <field name="level_progress" widget="progressbar" style="text-align: left;" string="level progress:"/>
                                    <field mode="tree" name="employee_id">
                                        <tree>
                                            <field name="name"/>
                                            <field name="work_email"/>
                                            <field name="years_of_experience"/>
                                        </tree>
                                    </field>
                                    <field name="skill_id"/>
                                </form>
                            </field>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//div[@class='oe_chatter']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='personal_information']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="employee_action" model="ir.actions.act_window">
            <field name="name">List of employee</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>