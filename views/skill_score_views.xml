<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_employee_skill_score_tree" model="ir.ui.view">
            <field name="name">employee.skill.score.view.tree</field>
            <field name="model">employee.skill.score</field>
            <field name="arch" type="xml">
                <tree string="skill score">

                            <field name="level_progress"/>
                            <field name="employee_id" widget="many2many_tags"/>
                            <field name="skill_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_employee_skill_score_form" model="ir.ui.view">
            <field name="name">employee.skill.score.view.form</field>
            <field name="model">employee.skill.score</field>
            <field name="arch" type="xml">
                <form string="Skill score">
                    <sheet>
                        <group>
                            <field name="level_progress"/>
                            <field name="employee_id"/>
                            <field name="skill_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

                <!-- Kanban View -->
        <record id="view_employee_skill_kanban" model="ir.ui.view">
            <field name="name">employee.skill.score.view.kanban</field>
            <field name="model">employee.skill.score</field>
            <field name="arch" type="xml">
                <kanban default_group_by="skill_id" records_draggable="0">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <strong>
                                    <field name="skill_id"/>
                                </strong>
                                <div>
                                    score: <field name="level_progress"/>
                                </div>
                                <div>
                                    member have got this skill: <field name="employee_id"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_employee_skill_score" model="ir.actions.act_window">
            <field name="name">skills score</field>
            <field name="res_model">employee.skill.score</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
    </data>
</odoo>